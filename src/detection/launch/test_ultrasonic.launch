<launch>

  <!--超声波雷达模式-->
  <!--0xb1， 2.0m外， 盲区290mm-->
  <!--0xb3， 2.0m内， 盲区250mm-->
  <!--0xb5， 1.5m内， 盲区205mm-->
  <!--0xb7， 1.0m内， 盲区200mm-->
  <arg name="ultrasonic_mode" default="0xb5" />

  <!--读bag文件-->
  <node pkg="rosbag" type="play" name="player" args="$(find record_data)/bagfiles/200107_u2.bag" respawn="true" /> 

  <!--接收MPC单片机CAN消息-->
  <node pkg="raw_data" type="ultrasonic_activate_node" name="ultrasonic_activate_node" >
    <param name="ultrasonic_mode" value="$(arg ultrasonic_mode)" />
  </node>

  <!--超声波处理模块-->
  <node pkg="detection" type="ultrasonic_node" name="ultrasonic_node" output="screen" />

  <!--运行可行域分割程序-->
  <include file="$(find lidar_grid)/launch/drivable_area.launch" />

  <!--rqt_plot-->
  <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot1" />
  <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot2" />

</launch>